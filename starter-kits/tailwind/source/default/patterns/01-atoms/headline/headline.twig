{# SETTING #}
{% set attributes = attributes|default(create_attribute()) %}
{% set element = element|default('div') %}
{% set size = size|default('large') %}

{%
  set classes = ([
  'headline text-gray-500 dark:text-gray-50 font-serif',
  pattern_configuration('headline', variant, 'size')[variant],
  pattern_configuration('headline', variant, 'spacing_bottom')[spacing_bottom],
  classes,
]) | sort | join(' ') | trim
%}

{# TEMPLATES #}
<{{ element }} {{ attributes.addClass(classes) }}>
{{ title_prefix }}
  {{ title_suffix }}
  {{ content }}
</{{ element }}>
